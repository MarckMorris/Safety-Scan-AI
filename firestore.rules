rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and update their own user profile document.
    // Creation is handled securely by the backend during registration.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // A user can perform any action on their own scans.
    match /users/{userId}/scans/{scanId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // A user can perform any action on their own projects.
    match /users/{userId}/projects/{projectId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // The rules below are for the subcollections within a project.
    // A user can perform any action on the subcollections of their own projects.

    match /users/{userId}/projects/{projectId}/builds/{buildId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/projects/{projectId}/deployments/{deploymentId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/projects/{projectId}/security_scans/{scanReportId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
